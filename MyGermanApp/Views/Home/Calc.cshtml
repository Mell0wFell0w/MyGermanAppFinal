<body>
    <p>Some text</p>

    <!-- Calculator Section-->
    <section class="page-section" id="contact">
        <div class="container">

            <!-- Calculator Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Estimator</h2>

            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Contact Section Form-->
            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-7">

                    <form id="calculatorForm">
                        <!-- Hours Input -->
                        <div class="form-group">
                            <label for="hoursInput">Hours:</label>
                            <input type="number" class="form-control" id="hoursInput" placeholder="Enter hours">
                        </div>
                        <br />
                        <p>Please enter just one or the other.</p>
                        <br />
                        <!-- Language Proficiency Level Dropdown -->
                        <div class="form-group">
                            <label for="proficiencyLevel">Language Proficiency Level:</label>
                            <select class="form-control" id="proficiencyLevel">
                                <option value="0">Select Level</option>
                                <option value="A1">A1 (Lower Beginner)</option>
                                <option value="A2">A2 (Upper Beginner)</option>
                                <option value="B1">B1 (Lower Intermediate)</option>
                                <option value="B2">B2 (Upper Intermediate)</option>
                                <option value="C1">C1 (Lower Advanced)</option>
                                <option value="C2">C2 (Upper Advanced/Fluent)</option>
                            </select>
                        </div>
                        <!-- Submit Button -->
                        <button type="button" class="btn btn-primary btn-xl" id="calculateButton">Calculate</button>
                    </form>
                    <!-- Display Results -->
                    <div id="result" class="mt-4"></div>

                </div>
            </div>
        </div>
    </section>

